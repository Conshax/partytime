{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__test__/**/*.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
